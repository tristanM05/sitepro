{% extends 'base_admin.html.twig' %}

{% block title %}Connexion administrateur{% endblock %}

{% block body %}
<div class="wrapper container-fluid text-center" id="log">
    {% if erreur %}
    <div class="alert alert-danger">
        <p>Une erreur est survenue, le nom d'utilisateur ou le mot de passe est incorrect</p>
    </div>
    {% endif %}
    {% for message in app.flashes('success') %}
    <div class="container alert alert-success text-center">
        {{message}}
    </div>
    {% endfor %}
    <div class="container">
        <div class="row">
            <div class="card cardLog">
                <div class="card-header">
                    <h2 class="text-uppercase titleCard ">Connexion a votre espace d'administration</h2>
                </div>
                <div class="card-body d-flex">
                    <div class="col-lg-6 col-sm-12">
                        <form method="post" class="m-auto pt-5" id="log2">
                            <div class="form-group">
                                <label for="mail">Identifiant:</label>
                                <input type="text" class="form-control" name="_username" id="mail" required
                                    value="{{identifiant}}">
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe:</label>
                                <input type="password" class="form-control" name="_password" id="password" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info form-control">Connexion</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-6" id="imgLog">
                        <img src="/images/undraw.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
